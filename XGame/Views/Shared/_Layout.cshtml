
<!DOCTYPE html>
<html lang="en" >

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
     
    <title>@ViewData["Title"] - XGame</title>
    
  
    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XGame.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Style", required: false)
    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-lugx-gaming.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@@7/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/CustomeDropdown/styledropdown.css"/>
 
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="index.html" class="logo">
                            <img src="/assets/images/logo.png" alt="" style="width: 158px;">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav" dir="rtl">
                            <li><a class="active" asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
                            <li><a asp-controller="Home" asp-action="Shop">فروشگاه</a></li>
                            <li><a asp-controller="Home" asp-action="ProductDetails">Product Details</a></li>
                            <li><a  asp-controller="Home" asp-action="Contact" >تماس باما</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
	                            <!-- Custom dropdown component -->
	                            <div class="dropdown1">
		                            <!-- Selected option display -->
		                            <div class="select">
			                            <span class="selected">حساب کاربری</span>
			                            <!-- Dropdown caret icon -->
			                            <div class="caret"></div>
		                            </div>
		                            <!-- Dropdown menu options -->
		                            <ul class="menu1">
                                        <li><a class="IgnoreCss" asp-controller="Auth" asp-action="Logout">خروج از حساب</a></li>
			                            <li><a>مدیریت حساب</a></li>
			                            <li><a>سبد خرید</a></li>
                                        @if (User.IsInRole("Admin"))
                                        {
	                                        <li><a asp-controller="AdminPanel" asp-action="AddCategory">افزودن دسته</a></li>
                                        }
                                        <li style="visibility: hidden"><a></a></li>
		                            </ul>
	                            </div>

	                            <li style="color: goldenrod;padding-right: 10%">خوش آمدید @User.Identity.Name</li>


                            }
                            else
                            {

                            <li><a asp-controller="Auth" asp-action="Login">ورود / ثبت نام</a></li>
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div>

    @RenderBody()
    </div>
    @if (ViewBag.ShowFooter == false)
    {
	    
    }
    else
    {
	    <footer>
		    <div class="container">
			    <div class="col-lg-12">
				    <p>است XGame تمامی حقوق مادی و معنوی متعلق به  </p>
			    </div>
		    </div>
	    </footer>
    }
    
    
    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="/CustomeDropdown/Jsdropdown.js"></script>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/isotope.min.js"></script>
    <script src="/assets/js/owl-carousel.js"></script>
    <script src="/assets/js/counter.js"></script>
    <script src="/assets/js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    </body>
</html>