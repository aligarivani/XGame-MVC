@model XGame.Models.UserDTO
@section Style
{
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="/login/images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/login/vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/login/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/login/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/login/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/login/css/util.css">
	<link rel="stylesheet" type="text/css" href="/login/css/main.css">

}
<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100" style="margin-top: 150px">
			<div class="login100-pic js-tilt" data-tilt>
				<img src="/login/images/img-01.png" alt="IMG">
			</div>
			<div asp-validation-summary="ModelOnly" class="text-danger-emphasis"></div>
			<form method="post" asp-action="Register" class="login100-form validate-form">
				<span class="login100-form-title">
					حساب کاربری جدید
				</span>

				<div class="wrap-input100 validate-input" data-validate="نام کاربری اجباریست">
					<input class="input100" asp-for="UserName"  placeholder=" نام کاربری" dir="rtl">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa-solid fa-id-card"></i>
					</span>
				</div>
				<span asp-validation-for="UserName" class="text-danger" style="padding: 50px"></span>
				<div class="wrap-input100 validate-input" data-validate="نام و نام خانوادگی اجباریست">
					<input class="input100" asp-for="FullName" placeholder="نام و نام خانوادگی" dir="rtl">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa-solid fa-pen-fancy"></i>
					</span>
				</div>
				<span asp-validation-for="FullName" class="text-danger" style="padding: 50px"></span>

				<div class="wrap-input100 validate-input" data-validate="شماره تلفن اجباریست">
					<input class="input100" asp-for="PhoneNumber" placeholder="شماره همراه" dir="rtl">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa-solid fa-phone-volume"></i>
					</span>
				</div>

				<span asp-validation-for="PhoneNumber" class="text-danger" style="padding: 50px"></span>

				<div class="wrap-input100 validate-input" data-validate="آدرس ایمیل اجباریست">
					<input class="input100" asp-for="Email" placeholder="ایمیل" dir="rtl">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-envelope" aria-hidden="true"></i>
					</span>
				</div>
				<span asp-validation-for="Email" class="text-danger" style="padding: 50px"></span>

				<div class="wrap-input100 validate-input" data-validate="رمز عبور اجباریست">
					<input class="input100" asp-for="Password" placeholder="رمز عبور" dir="rtl">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-lock" aria-hidden="true"></i>
					</span>
				</div>
				<span asp-validation-for="Password" class="text-danger" style="padding: 50px"></span>


				<div class="container-login100-form-btn">
					<button type="submit" class="login100-form-btn">
						ثبت نام
					</button>
				</div>

				

				<div class="text-center p-t-136">
					<a class="txt2" asp-controller="Auth" asp-action="Login">
						حساب کاربری دارید ؟ وارد شوید
						<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
					</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts
	{
	<script src="/login/vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="/login/vendor/bootstrap/js/popper.js"></script>
	<script src="/login/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="/login/vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="/login/vendor/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
	<!--===============================================================================================-->
	<script src="/login/js/main.js"></script>
}
