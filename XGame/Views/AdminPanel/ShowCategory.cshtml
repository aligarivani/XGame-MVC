@using XGame.Entity
@model List<XGame.Entity.CategoryEntity>
@{
	ViewData["Title"] = "افزودن دسته";
	var cate = ViewBag.cate as List<CategoryEntity>;
}


<div class="page-heading header-text" dir="rtl" style="padding: 150px 0px 50px 0px !important;">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h3>افزودن دسته </h3>
				<span class="breadcrumb"><a asp-controller="Home" asp-action="Index">صفحه اصلی </a>  >  افزودن دسته</span>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="pt-5">
		<table class="table">
			<thead>
			<tr style="text-align: center;">
				<th scope="col">Id</th>
				<th scope="col">Title</th>
				<th scope="col">Title Farsi</th>
				<th scope="col">Description</th>
				<th scope="col">Options</th>

			</tr>
			</thead>
			<tbody>
			
			@foreach (var item in cate)
			{
				<tr style="text-align: center;">
					<th scope="row">@item.ID</th>
					<td>@item.Title</td>
					<td>@item.TitleFarsi</td>
					<td>@item.Description</td>
					<td>
						<button class="btn btn-primary" type="button">ویرایش</button>
						<button class="btn btn-danger" type="button" >حذف</button>

					</td>
				</tr>
			}
			
			</tbody>
		</table>
		<div class="container" style="text-align: center">
			<button class="btn btn-success">ثبت دسته بندی جدید</button>
		</div>
	</div>
</div>